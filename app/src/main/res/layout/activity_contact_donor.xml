<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.coolguys.blooddonor.activity.ContactDonor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/donor_profile_pic"
            android:src="@drawable/ic_profile"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donor_profile_name"
                android:text="Raj Chitrada"
                android:textSize="28sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phoneCallLayout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/phoneCall"
            android:layout_margin="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:src="@drawable/phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9885999117"
            android:id="@+id/donorNumber"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/phoneCall"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/sendMessage"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:src="@drawable/message_text"/>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/sendMessage"
            android:background="@android:color/black"/>

    </RelativeLayout>
</LinearLayout>
